<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>iMeds</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <section class="h-100 gradient-form" style="background-color: #eee">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-4">
                    <div class="text-center">
                      <a href="/">
                      <img
                        src="/imgs/newLogo.png"
                        style="width: 355px"
                        alt="logo"
                      /></a>
                      <!-- <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4> -->
                    </div>
                    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                      messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                      <% }) %> <% } %>

                    <form action="/login" method="POST">
                      <p class="logger">Please create your account</p>
                      <form action="/signup" method="POST">
                        <div class="form-outline mb-4">
                            <label for="userName" class="form-label">Name:</label>
                            <input type="text" class="form-control" id="userName" name="userName">
                          </div>
                        <div class="form-outline mb-4">
                          <label for="exampleInputEmail1" class="form-label">Email address</label>
                          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="form-outline mb-4">
                          <label for="password" class="form-label">Password</label>
                          <input type="password" class="form-control" id="password" name="password">
                          <div id="emailHelp" class="form-text">Password must be 8 characters minimum.</div>
                        </div>
                        <div class="form-outline mb-4">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                          </div>
                        <button type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3">Submit</button>
                      </form>
                  </div>
                </div>
                <div
                  class="col-lg-6 d-flex align-items-center gradient-custom-2"
                >
                  <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                    <h4 class="mb-4">Welcome to iMeds.</h4>
                    <p class="small mb-0">
